{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],

    "noEmit": false,
    "emitDeclarationOnly": true,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "removeComments": false,
    "isolatedModules": true,
    "moduleResolution": "Node",

    "rootDir": "src",
    "outDir": "dist",

    "strict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    "esModuleInterop": false,

    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
