  "dependencies": {},
  "peerDependencies": {
    "gsap": "3.x"
  },
  "devDependencies": {
    "@types/node": "^16.7.2",
    "gsap": "3.7.1",
    "shx": "^0.3.3",
    "standard-version": "^9.3.1",
    "typescript": "^4.3.5",
    "vite": "^2.5.1"
  }
